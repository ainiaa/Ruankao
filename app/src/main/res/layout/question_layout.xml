<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.a91coding.ruankao.Activity.MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/answerTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="7dp" />

        <RadioGroup
            android:id="@+id/answerRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/answerARadioButton"
                style="@style/RadioButton"
                android:text="RadioButton" />

            <RadioButton
                android:id="@+id/answerBRadioButton"
                style="@style/RadioButton"
                android:text="RadioButton" />

            <RadioButton
                android:id="@+id/answerCRadioButton"
                style="@style/RadioButton"
                android:text="RadioButton" />

            <RadioButton
                android:id="@+id/answerDRadioButton"
                style="@style/RadioButton"
                android:text="RadioButton" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/answerDescLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.61"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="350dp">

        <LinearLayout style="@style/common_horizontal_division_line_style" />

        <TextView
            android:id="@+id/answerDescTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            tools:layout_editor_absoluteX="326dp"
            tools:layout_editor_absoluteY="327dp" />
    </LinearLayout>

</LinearLayout>
